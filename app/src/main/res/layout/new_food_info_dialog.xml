<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--shoppling list 的 Dialog的自訂義layout-->
    <View
        android:id="@+id/view"
        android:layout_width="360dp"
        android:layout_height="320dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_view_round"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/food_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:text="新增食物資訊"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/view"/>

    <TextView
        android:id="@+id/food_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="食物名稱 : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_title"
        app:layout_constraintLeft_toLeftOf="@id/food_info_title"/>

    <TextView
        android:id="@+id/food_info_cals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="熱量 : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_name"
        app:layout_constraintLeft_toLeftOf="@id/food_info_name"/>

    <TextView
        android:id="@+id/food_info_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="蛋白質 : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_cals"
        app:layout_constraintLeft_toLeftOf="@id/food_info_cals"/>

    <TextView
        android:id="@+id/food_info_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="脂肪 : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_protein"
        app:layout_constraintLeft_toLeftOf="@id/food_info_protein"/>

    <TextView
        android:id="@+id/food_info_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:text="碳水化合物 : "
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_fat"
        app:layout_constraintLeft_toLeftOf="@id/food_info_fat"/>

    <EditText
        android:id="@+id/food_info_ed_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:ems="6"
        android:inputType="textPersonName"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toTopOf="@id/food_info_name"
        app:layout_constraintLeft_toRightOf="@id/food_info_name"/>

    <EditText
        android:id="@+id/food_info_ed_cals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:ems="6"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/food_info_ed_name"
        app:layout_constraintTop_toTopOf="@id/food_info_cals"/>

    <EditText
        android:id="@+id/food_info_ed_protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:ems="6"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/food_info_ed_cals"
        app:layout_constraintTop_toTopOf="@id/food_info_protein"/>

    <EditText
        android:id="@+id/food_info_ed_fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:ems="6"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/food_info_ed_protein"
        app:layout_constraintTop_toTopOf="@id/food_info_fat"/>

    <EditText
        android:id="@+id/food_info_ed_carbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:ems="6"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@id/food_info_ed_fat"
        app:layout_constraintTop_toTopOf="@id/food_info_carbs"/>


</androidx.constraintlayout.widget.ConstraintLayout>