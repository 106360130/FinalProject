<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/foodData"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="foodData"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Calories"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/foodData"
        app:layout_constraintTop_toBottomOf="@+id/foodData" />

    <EditText
        android:id="@+id/caloriesAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="caloriesAmount"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/calories"
        app:layout_constraintEnd_toEndOf="@+id/foodData"
        app:layout_constraintStart_toEndOf="@+id/calories"
        app:layout_constraintTop_toBottomOf="@+id/foodData"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="336dp"
        android:layout_marginRight="336dp"
        android:text="protein"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/caloriesAmount"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/calories"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <EditText
        android:id="@+id/proteinAmount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="proteinAmount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/foodData"
        app:layout_constraintStart_toEndOf="@+id/protein"
        app:layout_constraintTop_toBottomOf="@+id/caloriesAmount" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="fat"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/protein"
        app:layout_constraintStart_toStartOf="@+id/protein"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <EditText
        android:id="@+id/fatAmount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="fatAmount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/foodData"
        app:layout_constraintStart_toEndOf="@+id/fat"
        app:layout_constraintTop_toBottomOf="@+id/proteinAmount" />
</androidx.constraintlayout.widget.ConstraintLayout>