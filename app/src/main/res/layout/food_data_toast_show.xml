<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:text="foodName"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/foodName"
        app:layout_constraintStart_toStartOf="@+id/foodName"
         />

    <TextView
        android:id="@+id/caloriesAmount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="caloriesAmount"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/calories"
        app:layout_constraintEnd_toEndOf="@+id/foodName_show"
        app:layout_constraintStart_toEndOf="@+id/calories"
        app:layout_constraintTop_toBottomOf="@+id/foodName_show"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="protein"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/calories"
        app:layout_constraintStart_toStartOf="@id/calories"/>

    <TextView
        android:id="@+id/proteinAmount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="proteinAmount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/foodName_show"
        app:layout_constraintStart_toEndOf="@+id/protein"
        app:layout_constraintTop_toBottomOf="@+id/caloriesAmount_show" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="fat"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/protein"
        app:layout_constraintStart_toStartOf="@+id/protein"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <TextView
        android:id="@+id/fatAmount_show"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="fatAmount"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/foodName_show"
        app:layout_constraintStart_toEndOf="@+id/fat"
        app:layout_constraintTop_toBottomOf="@+id/proteinAmount_show" />
</androidx.constraintlayout.widget.ConstraintLayout>