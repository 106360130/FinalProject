<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/foodName_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="FoodName"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/foodName_show"
        app:layout_constraintStart_toStartOf="@+id/foodName_show"
         />

    <TextView
        android:id="@+id/caloriesAmount_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:text="caloriesAmount_show"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/calories"
        app:layout_constraintStart_toEndOf="@+id/calories" />

    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/calories"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/proteinAmount_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="proteinAmount_show"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/protein"
        app:layout_constraintStart_toStartOf="@+id/caloriesAmount_show" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/protein"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <TextView
        android:id="@+id/fatAmount_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="fatAmount"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/fat"
        app:layout_constraintStart_toStartOf="@+id/proteinAmount_show" />
</androidx.constraintlayout.widget.ConstraintLayout>